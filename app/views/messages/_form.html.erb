<div class="container-fluid">
<%= form_for(Message.new, html: {class: 'form-horizontal'}) do |f| %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class=" form-group">
    <label class="control-label col-xs-2" for="name">名前:</label>
    <div class="col-xs-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2" for="age">年齢:</label>
    <div class="col-xs-2">
        <%= f.text_field :age, class: 'form-control' %> 
    </div>
    <div class="col-xs-8">  </div>
    <label class="control-label col-xs-1">歳</label>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2" for="body">内容:</label>
    <div class="col-xs-10">
        <%= f.text_area :body, size: "50x3", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-offset-2 col-xs-10">
       <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
