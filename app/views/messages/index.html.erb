<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
    <div class=" form-group">
      <div class="col-sm-1 label label-info"> <%= message.name %>
      </div>
      <div class="col-sm-2">
        <small><% if (message.age != nil) %> 
        （<%= message.age %> 歳）
        <% end %>
        </small>
      </div>
      <div class="col-sm-6"> 
      <%= message.body %>
      </div>
       <div class="col-sm-3"> 
            (<%= link_to "edit" , edit_message_path(message) %> | 
             <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
            )
      </div>
    </div>
      <br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>.
